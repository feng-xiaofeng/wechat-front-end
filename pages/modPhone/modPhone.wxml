    <input confirm-type="done" value="{{user_phone}}" placeholder-class="txt" maxlength="12" bindinput="userPhone" type="text" placeholder="请输入手机号" style="border-bottom: 1rpx solid #b6b2af; width: 90%; height: 80rpx; margin: 0 auto; position: relative; left: 0rpx; top: 174rpx"/>
    <input confirm-type="done" value="{{phone_code}}" maxlength="6" placeholder-class="txt" bindinput="phoneCode" type="text" placeholder="输入验证码" style=" width: 472rpx; height: 92rpx; margin: 0 auto; position: relative; left: -102rpx; top: 180rpx; margin-top: 100rpx; display: block; box-sizing: border-box"/>
    <view bindtap="phoneCodeTap" style="position: fixed; width: 180rpx; color: aliceblue; background: #0ce68b; left: 525rpx; top: 378rpx; display: block; box-sizing: border-box; height: 60rpx; text-align: center; line-height: 60rpx; border-radius: 5rpx">
        获取验证码
    </view>
    <view style="border-bottom: 1rpx solid #b6b2af; width: 674rpx; margin: 0 auto; height: 2rpx; display: block; box-sizing: border-box; position: relative; left: -8rpx; top: 178rpx">
        
    </view>
    <button type="primary" form-type="submit" style="position: relative; width: 300rpx; left: 0rpx; margin-top: 90%">保存</button>
</form>


