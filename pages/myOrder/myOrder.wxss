/* pages/myPutawayGodos/myPutawayGodos.wxss */
@import "/pages/confirmOrder/confirmOrder.wxss";
page{
    width: 100%;
    background: rgb(235, 235, 235);
  }
  .topNavigation{
   
    width: 98%; 
    height: 80rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
  }
.select-item {
    padding-right: 25rpx;
    display: inline-block;
    font-size: 35rpx;
    white-space: nowrap;
    font-weight: 500;
    color: #a3a1a1;
}

.select-item>view {
    display: inline-block;
}
.li{
    border-radius: 10rpx 10rpx 10rpx 10rpx;
    background: #ffffff;
    width: 98%; 
    margin: 0 auto;
    
    height: 290rpx; 
    margin-bottom: 10rpx;
}
.pic{
    border-radius: 10rpx 10rpx 10rpx 10rpx;
    height: 200rpx;
    width: 180rpx;
    display: flex; 
    justify-content: center;
    
     
  }
  .title-wrap{
    padding: 5rpx 10rpx 0rpx 10rpx;
    font-size: 30rpx;
    color: #333;
    position: relative;
     left: 190rpx;
      top: -195rpx; 
      width: 523rpx;
       height: 44rpx; 
  }
  .title-wrap .ListContent{
    font-weight: 600;
    width: 492rpx; 
    height: 50rpx; 
     position: relative; 
     left: -10rpx;
      top: -11rpx;
  }
  .title-wrap .price{
    text-align: right;font-weight: 500; width: 138rpx; height: 58rpx; display: block; box-sizing: border-box; position: relative; left: 392rpx; top: -60rpx; color: red;
  }
  .models{
    width: 546rpx; 
    height: 150rpx; 
    left: 190rpx;
     position: relative; 
     top: -200rpx; 
     display: block; 
     box-sizing: border-box;
  }
  .models .top{
      width: 80rpx;
      text-align: right;
    font-weight: 500; 
    font-size: 19rpx; 
    color: rgb(136, 129, 129); 
    position: relative;
     left: 449rpx; 
     top: 6rpx;
  }
  .models .right{
    color: red;
    margin-top: -110rpx;
    font-weight: 500;
     margin-left: 438rpx;
      width: 100rpx;
       height: 50rpx;
        display: block;
         box-sizing: border-box;
  }
  .handle{
    height: 66rpx;
    margin-top: 14rpx;
    position: relative;
    left: 2rpx;
     top: -200rpx; 
     width: 100%;
     display: flex;
      box-sizing: border-box;
      flex-direction: row;
       justify-content: space-around;
       left: 0; 
       display: flex; 
       justify-content: center; 
       align-items: center;
  }
  /* 弹出窗 */
.toast-box {
    width: 100%;
    height: 100%;
    opacity: 1;
    position: fixed;
    top: 0px;
    left: 0px;
  }
  .toastbg {
    opacity: 0.5;
    background-color: black;
    position: absolute;
    width: 100%;
    min-height: 100vh;
  }
   
  .showToast {
    position: absolute;
    opacity: 1;
    width: 80%;
    margin-left: 10%;
    margin-top: 70%;
  }
  .toast-main {
    padding-top: 2vh;
    padding-bottom: 2vh;
    background-color: white;
    border-top-left-radius: 16rpx;
    border-top-right-radius: 16rpx;
  }
   
  .toast-input {
    margin-left: 5%;
    margin-right: 5%;
    margin-top:10%;
    margin-bottom:10%;
    background-color: rgb(240, 240, 240);
    padding-left: 2vh;
    padding-right: 2vh;
    padding-top: 1vh;
    padding-bottom: 1vh;
  }
  .toast-input textarea{
      width: 100%;
    background-color: rgb(240, 240, 240);
  }
  .toast-button {
    display: flex;
    background-color: white;
    height:50px;
    width:100%;
    border-radius: 0px;
    border-bottom-left-radius: 16rpx;
    border-bottom-right-radius: 16rpx;
    border-top:1px solid rgb(211, 211, 211);
  }
   
  .button1 {
    width: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0px;
    border-bottom-left-radius: 16rpx;
  }
   
  .button2 {
    width: 50%;
    border-left:1px solid rgb(211, 211, 211);
    display: flex;
    align-items: center;
    justify-content: center;
    color:#40A4D6;
  }
