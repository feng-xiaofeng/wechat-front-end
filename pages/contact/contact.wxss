/* pages/contact/contact.wxss */

input {
    white-space: pre-wrap;
    word-break: break-word;
  }
page {
    background-color: #f1f1f1;
  }
  
  .inputRoom {
    width: 100vw;
    height: 16vw;
    border-top: 1px solid #cdcdcd;
    background-color: #f1f1f1;
    position: fixed;
    bottom: 0;
    display: flex;
    align-items: center;
    z-index: 20;
  }
  input {
    width: 76vw;
    height: 9.33vw;
    background-color: #fff;
    border-radius: 40rpx;
    margin-left: 2vw;
    padding: 0 3vw;
    font-size: 28rpx;
    color: #444;
  }
  
  .leftMsg {
    font-size: 35rpx;
    color: #444;
    line-height: 7vw;
    padding: 2vw 2.5vw;
    background-color: #fff;
    margin-left: -1.6vw;
    border-radius: 10rpx;
    z-index: 10;
  }
  
  .rightMsg {
    font-size: 35rpx;
    color: #444;
    line-height: 7vw;
    padding: 2vw 2.5vw;
    background-color: #96EB6A;
    margin-right: -1.6vw;
    border-radius: 10rpx;
    z-index: 10;
  }

.inputRoom .send-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 60rpx;
    background-color: rgb(25, 218, 18);
    border-radius: 300rpx;
    margin-left: 2vw;
}
.circle {
    width: 26px;
    height: 26px;
    border: 2px solid rgb(131, 129, 129); /* 添加边框样式 */
    border-radius: 50%;
    background-color: transparent; /* 将背景颜色设为透明 */
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 25rpx;
    margin-right: 25rpx;
  }
  
  .plus {
    font-size: 40rpx;
    color: rgb(131, 129, 129);
    justify-content: center; /* 水平居中 */
    align-items: center; /* 垂直居中 */
  }
  
 /* +号展开的页面  */
  .plus-page {
    z-index: 999;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    /* padding: 10rpx; */
    background-color: rgba(0, 0, 0, 0.6);
  }
  
  .plus-content {
    height: 100%;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 10px;
    background-color: #FFFFFF;
    padding: 10px;
  }
  
  .plus-item {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .plus-icon-photo {
    width: 40px;
    height: 40px;
    background-color: gray;
    background-size: cover;
  }
  
  .plus-icon-camera {
    width: 40px;
    height: 40px;
    background-color: gray;
    background-size: cover;
  }
  
  .plus-text {
    margin-top: 5px;
    color: #333333;
  }
  
  .plus-cancel {
    width: 100%;
    height: 100px;
    background-color: #FFFFFF;
    color: #FF0000;
    border: none;
    border-radius: 10px;
    margin-top: 10px;
  }